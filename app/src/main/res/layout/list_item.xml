<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingLeft="12dp">


        <TextView
            android:id="@+id/viewTripName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tripStartPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewTripName"
            android:layout_alignStart="@+id/viewTripName" />

        <TextView
            android:id="@+id/tripEndPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tripStartPoint"
            android:layout_alignStart="@+id/viewTripName" />

        <TextView
            android:id="@+id/tripTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tripEndPoint"
            android:layout_alignStart="@+id/viewTripName" />

        <ImageButton
            android:id="@+id/editButton"
            android:layout_width="41dp"
            android:layout_height="35dp"
            android:layout_alignBottom="@+id/tripTime"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="0dp"
            android:contentDescription="@string/imgButton"
            app:srcCompat="@android:drawable/ic_menu_edit" />

        <ImageButton
            android:id="@+id/startButton"
            android:layout_width="41dp"
            android:layout_height="35dp"
            android:layout_alignBottom="@+id/editButton"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="43dp"
            android:layout_marginBottom="0dp"
            android:contentDescription="@string/imgButton"
            app:srcCompat="@android:drawable/ic_media_play" />

        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="41dp"
            android:layout_height="35dp"
            android:layout_alignBottom="@+id/startButton"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="82dp"
            android:layout_marginBottom="0dp"
            android:contentDescription="@string/imgButton"
            app:srcCompat="@android:drawable/ic_menu_delete" />

        <ImageButton
            android:id="@+id/viewButton"
            android:layout_width="41dp"
            android:layout_height="35dp"
            android:layout_alignBottom="@+id/deleteButton"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="123dp"
            android:layout_marginBottom="0dp"
            android:contentDescription="@string/imgButton"
            app:srcCompat="@android:drawable/ic_menu_view" />

    </RelativeLayout>


</LinearLayout>